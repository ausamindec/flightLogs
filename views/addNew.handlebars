<body class="bg-gray-100 text-gray-900 tracking-wider leading-normal">

    <nav id="header" class="fixed w-full z-10 top-0 shadow bg-gray-800" t>
        <div class="w-full container mx-auto flex flex-wrap items-center justify-center my-4 ">
            <div class="pl-4 md:pl-0">
                <h1 class="flex items-center text-white text-base xl:text-xl no-underline hover:no-underline font-extrabold font-sans text-center self-center" >
                    Add New Flight
                </h1>
            </div>
          </div>
      </nav>

  
        <section class="w-full lg:w-4/5">
        
            <hr class="bg-gray-300 my-12">

        

   
            <div class="p-8 mt-6 lg:mt-0 leading-normal rounded shadow bg-white">
                <form>
                       <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Date of Flight
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-full focus:bg-white" id="dateFlight" type="date" value="">
                            <br>
                        </div>
                    </div>
                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                           <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-">
                                Aircraft ID
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <select name="" class="form-select block w-full focus:bg-white" id="aircraftIDSelect">
                                <option value="Default">Default</option>
                                {{#each aircrafts as |aircraft|}}
                                <option value="{{aircraft.id}}">{{aircraft.reg_id}} - {{aircraft.aircraft_type}} - {{aircraft.aircraft_name}}</option>
                                {{/each}}
                            </select>

                            <p class="py-2 text-sm text-gray-600">Select your aircraft from the dropdown list</p>
                        </div>
                    </div>
                </form>

            </div>
   
            <hr class="bg-gray-300 my-12">

            <div class="p-8 mt-6 lg:mt-0 leading-normal rounded shadow bg-white">
                <form>
                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Departure Time
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-1/4 focus:bg-white" id="departureTime" type="time" value="">
                            <p class="py-2 text-sm text-gray-600">UTC</p>
                        </div>
                    </div>

                   <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Arrival Time
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-1/4 focus:bg-white" id="arrivalTime" type="time" value="">
                            <p class="py-2 text-sm text-gray-600">UTC</p>
                        </div>
                    </div>

                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Departure Airport
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-full focus:bg-white" id="departureAirport" type="text" value="">
                            <p class="py-2 text-sm text-gray-600">IACO</p>
                        </div>
                    </div>

                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Arrival Airport
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-full focus:bg-white" id="arrivalAirport" type="text" value="">
                            <p class="py-2 text-sm text-gray-600">IACO</p>
                        </div>
                    </div>

             

                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textarea">
                                Comments
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <textarea class="form-textarea block w-full focus:bg-white" id="comments" value="" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="md:flex md:items-center">
                        <div class="md:w-1/3"></div>
                        <div class="md:w-2/3">
                
                        </div>
                    </div>
                </form>

            </div>

            <hr class="bg-gray-300 my-12">

         

            <div class="p-8 mt-6 lg:mt-0 leading-normal rounded shadow bg-white">
                <form>

                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Approaches
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-1/4 focus:bg-white" id="approaches" type="number" min="0" value="0">
                        </div>
                    </div>

                   <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Landings
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-1/4 focus:bg-white" id="landings" type="number" min="0" value="1">
                        </div>
                    </div>
                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Instrument Time
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-1/4 focus:bg-white" id="instrumentTime" type="number" value="0" min="0">
                            <p class="py-2 text-sm text-gray-600">Hours</p>
                        </div>
                    </div>
                    <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-checkbox">
                                Dual
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <div>
                                <label class="inline-flex items-center">
                                    <input id = "dualCheck" type="checkbox" class="form-checkbox text-indigo-600" unchecked>
                                    <span class="ml-2 text-xl"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="md:flex md:items-center">
                        <div class="md:w-1/3"></div>
                        <div class="md:w-2/3">
                    </div>
                    </div>
                     <div class="md:flex mb-6">
                        <div class="md:w-1/3">
                            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4">
                                Instructor Name
                            </label>
                        </div>
                        <div class="md:w-2/3">
                            <input class="form-input block w-full focus:bg-white" id="instructorName" type="text" value="">
                        </div>
                    </div>

                </form>

            </div>
           
  
            <hr class="bg-gray-300 my-5">



                <div class="pt-8 grid grid-cols-3 ">
                    <button  id="btnSave" class="shadow bg-indigo-700 hover:bg-indigo-500 focus:shadow-outline focus:outline-none text-white font-bold py-2  rounded mr-4 text-4xl px-8 mx-8 m" type="button">
                        Save
                    </button>
                    <button id="btnCnl" class="shadow bg-green-100 hover:bg-green-200 focus:shadow-outline focus:outline-none text-gray-700 font-bold py-2  rounded text-4xl px-8 mx-8" type="button">
                        Cancel
                    </button>
                </div>

            </div>
  

        </section>
        <script src= "/javascript/addNew.js"></script>
</body>